<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.six.mapper.Commentmapper">

<select id="selectComment" resultType="Comment">
 SELECT * FROM comment WHERE movie_no=#{movieNo}
  </select>
<insert id="insertComment" parameterType="com.six.dto.Comment">
 INSERT INTO comment(text,score,movie_no,member_no,soname)
  VALUES(#{text},#{score},#{movieNo},#{memberNo},#{soname})
  </insert>
<delete id="deleteComment" parameterType="int"> 
DELETE FROM comment WHERE coid = #{coid}
 </delete>
</mapper>
        
        
        